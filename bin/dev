#!/bin/bash

###
# Simple script to get a development shell into the container.
# The development container need a volume:
#   docker run -v ~/src/slides-boot-my-app:/opt/boot-my-app --name BOOT_MY_APP_VOLUMES busybox true
###
docker run \
    --rm \
    --name="boot-my-app" \
    --volumes-from BOOT_MY_APP_VOLUMES \
    --env-file="./etc/boot-my-app.conf" \
    -p 35729:35729 \
    -i -t \
    --entrypoint="/bin/bash" \
    ncarlier/slides-boot-my-app \
    -c /bin/bash

